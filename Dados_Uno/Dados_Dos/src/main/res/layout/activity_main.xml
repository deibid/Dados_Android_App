<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/abc_search_url_text_normal"
            android:orientation="vertical"
            android:weightSum="6"
            android:gravity="center">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"


                >

                    <TextView
                        android:id="@+id/tvLastPlay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/ripple_material_light"
                        android:layout_marginBottom="28dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="6"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvQUno"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:background="@color/ripple_material_light"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:id="@+id/tvQDos"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:background="@color/ripple_material_light"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/tvQTres"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:background="@color/ripple_material_light"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView

                        android:id="@+id/tvQCuatro"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:background="@color/ripple_material_light"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:id="@+id/tvQTotal"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:textColor="@android:color/black"
                        android:background="@color/ripple_material_light"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>



                    </LinearLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/ripple_material_light"
                    android:layout_marginBottom="28dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"/>

                </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/uiUno"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/background_floating_material_dark">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/accent_material_dark"
                    android:onClick="textViewClick"
                    />
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvComp1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textSize="17sp"
                        android:layout_marginBottom="0dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@color/ripple_material_light"
                        android:textColor="@color/material_blue_grey_800"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@android:color/holo_red_light"  />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@android:color/holo_green_light"
                            android:layout_margin="2dp"
                            />
                    </LinearLayout>



                </LinearLayout>




                <TextView
                    android:id="@+id/tvSymbol"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="35sp"
                    android:text="9"
                    android:textColor="@color/accent_material_dark"
                    android:onClick="textViewClick"
                    />

                <LinearLayout
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:background="@android:color/holo_blue_light"
                    android:id="@+id/ledTurn"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/uiDos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_floating_material_dark"
            android:textSize="20sp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tvComp2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/ripple_material_light"
                android:textColor="@color/material_blue_grey_800"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/uiTres"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_floating_material_dark"
            android:textSize="20sp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tvComp3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/ripple_material_light"
                android:textColor="@color/material_blue_grey_800"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/uiCuatro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_floating_material_dark"
            android:textSize="20sp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tvUser"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/ripple_material_light"
                android:textColor="@color/material_blue_grey_800"/>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
